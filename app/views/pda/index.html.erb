<div class="row">
    <%= form_tag(controller: "pda", action: "compute", method: "post") do %>
        </br>
        </br>
        <div class="row">
            <div class="col s12 m12">
                <div class="card-panel white">
                    <div class="row">
                        <h3 class="center deep-purple-text text-darken-1">Create PDA</h3>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <%= text_field_tag(:states)%>
                            <label for="states">States</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12 m4">
                            <%= text_field_tag(:alphabet) %>
                            <label for="alphabet">Alphabet</label>
                        </div>
                        <div class="input-field col s12 m4">
                            <%= text_field_tag(:start) %>
                            <label for="start">Initial State</label>
                        </div>
                        <div class="input-field col s12 m4">
                            <%= text_field_tag(:accept) %>
                            <label for="accept">Accept States</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <%= text_field_tag(:transitions) %>
                            <label for="transitions">Transitions</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="center">
                            <div class="input-field col s12">
                                <%= submit_tag("Compute",:class => "btn deep-purple darken-1") %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div>
