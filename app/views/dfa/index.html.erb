<div class="row">
    <%= form_tag(controller: "dfa", action: "compute", method: "post") do %>
        </br>
        </br>
        <div class="row">
            <div class="col s12 m12">
                <div class="card-panel white">
                    <div class="row">
                        <h3 class="center deep-purple-text text-darken-1">Create DFA</h3>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <%= text_field_tag(:states, nil, :required => true)%>
                            <label for="states">States</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12 m4">
                            <%= text_field_tag(:alphabet) %>
                            <label for="alphabet">Alphabet</label>
                        </div>
                        <div class="input-field col s12 m4">
                            <%= text_field_tag(:start) %>
                            <label for="start">Initial State</label>
                        </div>
                        <div class="input-field col s12 m4">
                            <%= text_field_tag(:accept) %>
                            <label for="accept">Accept States</label>
                        </div>
                    </div>
                    </br>
                    <div class="row">
                        <div class="col s12 m4">
                            <h5>Transitions</h5>
                        </div>
                        <div class="col s12 m4 pull-m2">
                            <a onclick="addRow()" class="btn deep-purple darken-1">Add Transition</a>
                        </div>
                    </div> 
                    <div id="transitions">
                        <div id="transitionRow">
                        </div>
                    </div>

                    <div class="row">
                        <div class="center">
                            <div class="input-field col s12">
                                <%= submit_tag("Compute",:class => "btn deep-purple darken-1") %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div>

<div style="display: none;" id="new_transition_row">
    <%= render partial: "transitions" %>
</div>

<div class="row">
    <div class="input-field col s3">
        <label for="current_state">Current State</label>
        <input name="current_state" type="text" class="validate current_state">
    </div>
    <div class="input-field col s3">
        <label for="symbol">Symbol</label>
        <input name="symbol" type="text" class="validate symbol">
    </div>
    <div class="input-field col s4">
        <label for="destination">Destination</label>
        <input type="text" class="validate destination">
    </div>
    <div class="input-field col s2">
        <a href="#" class="remove-row" onclick="removeRow($(this))"><i class="material-icons deep-purple-text text-darken-1">delete</i></a>
    </div>
</div>

<script>

    var transition_row = "";

    function addRow(){
        transition_row = "<div class=\"row\">";
        transition_row += "<div class=\"input-field col s3\">";
        transition_row += "<label for=\"current_state\">Current State</label>";
        transition_row += "<input name=\"current_state\" type=\"text\" class=\"validate current_state\"></style><div>";
        transition_row += "<div class=\"input-field col s3\">";
        transition_row += "<label for=\"symbol\">Symbol</label>";
        transition_row += "<input name=\"symbol\" type=\"text\" class=\"validate symbol\"></div>";
        transition_row += "<div class=\"input-field col s4\">";
        transition_row += "<label for=\"destination\">Destination</label>";
        transition_row += "<input type=\"text\" class=\"validate destination\"></div>";
        transition_row += "<div class=\"input-field col s2\">";
        transition_row += "<a href=\"#\" class=\"remove-row\" onclick='removeRow($(this))'><i class=\"material-icons deep-purple-text text-darken-1\">delete</i></a></div></div>";
        $("#transitionRow").append(transition_row);
    }

    function removeRow(element){
        element.parent().parent().remove();
    }


</script>