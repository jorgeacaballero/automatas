                    </div> 
                    <div id="transitions">
                        <div id="transitionRow">
                        </div>
                    </div>

                    <%= hidden_field_tag 'transitions', [] %>

                    <div class="row">
                        <div class="center">
                            <div class="input-field col s12">
                                <button class="btn deep-purple darken-1" onclick="getData()">Compute</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div>

